<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@drawable/fondo_contenedor"
    android:padding="20sp"
    android:orientation="vertical"
    tools:context=".Fragment.DasboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="10sp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_grifero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:textSize="17sp"
                android:fontFamily="@font/nunito_black"/>

            <TextView
                android:id="@+id/fecha_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/turno_grifero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:scaleType="centerCrop"
            android:src="@drawable/logoprincipal"
            app:shapeAppearanceOverlay="@style/roudperfil" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/fondo_degradado"
        android:backgroundTint="#343535"
        android:elevation="2sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sucursal_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slogan_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_black"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnVenta"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_margin="5sp"
        android:foreground="@drawable/selectcard"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                android:layout_height="80sp"
                app:cardBackgroundColor="@color/colorCest"
                app:cardCornerRadius="10sp"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_salefuel"
                    android:layout_marginBottom="2sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:letterSpacing="0.15"
                android:text="@string/menu_ventas"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorGri"
                android:textSize="17sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="40sp"
                android:layout_height="40sp"
                app:cardBackgroundColor="@color/colorNer"
                app:cardCornerRadius="50sp"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_flechas"
                    android:layout_marginBottom="2sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnCierreX"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_margin="5sp"
        android:foreground="@drawable/selectcard"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                android:layout_height="80sp"
                app:cardBackgroundColor="@color/colorCest"
                app:cardCornerRadius="10sp"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_cierrex"
                    android:layout_marginBottom="2sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:letterSpacing="0.15"
                android:text="@string/menu_cierrex"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorGri"
                android:textSize="17sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="40sp"
                android:layout_height="40sp"
                app:cardBackgroundColor="@color/colorNer"
                app:cardCornerRadius="50sp"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_flechas"
                    android:layout_marginBottom="2sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnCambioTurno"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_margin="5sp"
        android:foreground="@drawable/selectcard"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                android:layout_height="80sp"
                app:cardBackgroundColor="@color/colorCest"
                app:cardCornerRadius="10sp"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_cambioturno"
                    android:layout_marginBottom="2sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:letterSpacing="0.15"
                android:text="@string/menu_cambioturno"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorGri"
                android:textSize="17sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="40sp"
                android:layout_height="40sp"
                app:cardBackgroundColor="@color/colorNer"
                app:cardCornerRadius="50sp"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_flechas"
                    android:layout_marginBottom="2sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnSalir"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_margin="5sp"
        android:foreground="@drawable/selectcard"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                android:layout_height="80sp"
                app:cardBackgroundColor="@color/colorCest"
                app:cardCornerRadius="10sp"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_iniciodia"
                    android:layout_marginBottom="2sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:letterSpacing="0.15"
                android:text="@string/menu_iniciodia"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorGri"
                android:textSize="17sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="40sp"
                android:layout_height="40sp"
                app:cardBackgroundColor="@color/colorNer"
                app:cardCornerRadius="50sp"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_flechas"
                    android:layout_marginBottom="2sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnInicioDia"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_margin="7sp"
        android:foreground="@drawable/selectcard"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:letterSpacing="0.15"
                android:text="@string/salir"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorGri"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="45sp"
                android:layout_height="45sp"
                app:cardBackgroundColor="@color/colorDanger"
                app:cardCornerRadius="50sp"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_salir"
                    android:layout_marginBottom="2sp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>