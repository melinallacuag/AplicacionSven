<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20sp"
        android:minWidth="600sp"
        android:background="@drawable/cardmodal"
        android:backgroundTint="@color/white"
        android:paddingBottom="10sp"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleconfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="ANULAR EGRESO"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/nunito_black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_guardarC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center_horizontal"
            android:text="¿Estás seguro de anular egreso?"
            android:textAlignment="center"
            android:layout_marginBottom="15sp"
            android:textColor="@color/gris"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnAnularEgresos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorSuccess"
                android:background="@drawable/input_border"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                app:cornerRadius="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACEPTAR"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10sp"
                    android:src="@drawable/icons_guardar"
                    app:tint="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCancelarAEgresos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorDanger"
                android:background="@drawable/input_border"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                app:cornerRadius="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_cancelar"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10sp"
                    android:src="@drawable/icons_cancelar"
                    app:tint="@color/white" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>