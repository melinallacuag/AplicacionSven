<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20sp"
    android:paddingTop="5sp"
    android:paddingEnd="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAutomatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorDanger"
                android:fontFamily="@font/nunito_black"
                android:text="@string/btn_stop"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginEnd="8sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnListadoComprobante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:backgroundTint="@color/colorSuccess"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="Listado"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:cornerRadius="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:text="@string/ope_cara"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/datos_terminal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerLado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_black"
            android:text="@string/op_manguera"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMangueras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_black"
            android:text="@string/op_modalida"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnLibre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryBtn"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="@string/ope_libre"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnSoles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryBtn"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="@string/ope_soles"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnGalones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryBtn"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="@string/ope_galones"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_black"
            android:text="@string/op_operacion"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnBoleta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryBtn"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="@string/ope_boleta"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnFactura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryBtn"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="@string/ope_factura"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnnotadespacho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryBtn"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="@string/ope_NDespacho"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:cornerRadius="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSerafin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryBtn"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="@string/ope_serafin"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnpuntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryBtn"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="@string/ope_puntos"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnimprimir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryBtn"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="@string/ope_canje"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:cornerRadius="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_black"
            android:text="@string/op_transacciones"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardtransaccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryBtn"
            app:cardCornerRadius="10dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_Cara"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_TPago"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_Impuesto"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_Placa"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_TPuntos"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_ClienteID"
                        android:textColor="@color/white"
                        android:textSize="8sp"/>

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_RUC"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_RazSocial"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_Direccion"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_TarjetaND"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_TarjCredito"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_NrpOperacion"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_Observacion"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_Kilometraje"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_Efectivo"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_SaldoCredito"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="@string/detalleV_PtosDisponibles"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="NFC"
                        android:textColor="@color/white"
                        android:textSize="8sp" />
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDetalleVenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/btncarritocompra"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:backgroundTint="@color/coloCar"
    app:srcCompat="@drawable/iconcaja"
    app:tint="@color/white"
    app:rippleColor="@color/coloCar2"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>