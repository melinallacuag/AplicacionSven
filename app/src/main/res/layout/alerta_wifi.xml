<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardmodal"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        android:padding="20sp"
        android:minWidth="500sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Error de Conexión WIFI"
            android:textColor="@color/colorRed"
            android:textSize="20sp"
            android:textAlignment="textStart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Por favor, verifica tu conexión WIFI."
            android:textAlignment="textStart"
            android:textColor="@color/gris"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAceptarWifi"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ACEPTAR"
            android:layout_gravity="end"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:backgroundTint="@color/colorHumo"
            android:layout_margin="5sp"
            android:fontFamily="@font/nunito_extrabold"
            app:cornerRadius="10sp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>