<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardlistaclienteafiliados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:clickable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5sp">



                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textNFC"
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extrabold"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textArticuloID"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extrabold"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="10sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textClienteID"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extrabold"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:inputType="textCapCharacters"/>

                    <TextView
                        android:id="@+id/textClienteRZ"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                <TextView
                    android:id="@+id/textTipoCliente"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extrabold"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textMontoDescuento"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:textSize="10sp"
                        android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </HorizontalScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>